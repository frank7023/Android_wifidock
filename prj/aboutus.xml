<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
android:orientation="vertical" 
android:id="@+id/settingspage" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
 <LinearLayout 
	android:gravity="center" 
	android:id="@+id/LinearLayout01" 
	android:orientation="vertical" 
	android:padding="5.0dip" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">        
		<TextView 
		android:textSize="36.0dip" 
		android:textStyle="bold" 
		android:textColor="#ffffffff" 
		android:id="@+id/textView1" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_marginLeft="4.0dip" 
		android:layout_marginRight="4.0dip" 
		android:text="关于"/>
		<View 
		android:id="@+id/separator" 
		android:background="#ffffffff" 
		android:layout_width="fill_parent" 
		android:layout_height="1.0dip" 	
		android:layout_marginRight="16.0dip" 	
		android:layout_alignParentLeft="true" 
		/>
    </LinearLayout>
    <LinearLayout 
	android:orientation="horizontal" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
        <ImageView 
		android:layout_gravity="center_vertical" 
		android:layout_width="72.0dip" 
		android:layout_height="72.0dip" 
		android:src="@drawable/ic_launcher" />
        <LinearLayout 
		android:layout_gravity="top" 
		android:orientation="vertical" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_marginLeft="4.0dip" 
		android:layout_weight="1.0">
            <TextView
			android:textSize="38.0dip" 
			android:textColor="#ffffffff" 
			android:layout_gravity="top" 
			android:id="@+id/apkTitle" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="飞影硬盘" />
			<TextView 
			android:textColor="#ffffffff" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="-8.0dip" 
			android:text=" V0.0.5" />
            <TextView 
			android:textColor="#ffffffff" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="-4.0dip" 
			android:text=" © 中国华录集团有限公司" />
			 <TextView 
			android:textColor="#ffffffff" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="-4.0dip" 
			android:text="　 深圳华录科技有限公司" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
	android:orientation="horizontal" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_marginTop="4.0dip" 
	>  
            <TextView
			android:textSize="18.0dip" 
			android:textColor="#ffffffff" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="官网 " />
            <TextView 
			android:textSize="18.0dip" 
			android:textColor="#ffffffff" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:autoLink="web"
			android:text="http://www.hualuyimi.com" />       
    </LinearLayout>
	<ScrollView 
	android:scrollbars="none" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:layout_weight="1.0">		
        <LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		>          
            <TextView 
			android:textSize="18.0dip" 
			android:textColor="#ffffffff" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="8.0dip" 
			android:text="更新日志" />
            <TableLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="8.0dip" 
			android:stretchColumns="1"
			android:id="@+id/table" 
			> 
				<TableRow>
                    <TextView 
					android:textColor="#ffffffff" 
					android:paddingRight="8.0dip" 
					android:layout_column="0" 
					android:textSize="16.0dip" 
					android:text="Version 0.5.0" />
                    <TextView 
					android:textColor="#ffffffff" 
					android:layout_column="1" 
					android:textSize="16.0dip" 
					android:text="软件框架完成" />
                </TableRow>	
                <TableRow>
                    <TextView 
					android:textColor="#ffffffff" 
					android:paddingRight="8.0dip" 
					android:layout_column="0" 
					android:textSize="16.0dip" 
					android:text="Version 0.6.0" />
                    <TextView 
					android:textColor="#ffffffff" 
					android:layout_column="1" 
					android:textSize="16.0dip" 
					android:text="修改文件复制问题，增加远程文件播放等功能" />
                </TableRow>				
            </TableLayout>
        </LinearLayout>
    </ScrollView>
	<LinearLayout
    	android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"	
		android:orientation="horizontal"	
    	>     	
		<com.hualu.wifishare.views.WPButtonView 	
		android:text="退出"
		android:id="@+id/btnCancel" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_weight="1.0"
		 />
    </LinearLayout>
</LinearLayout>
