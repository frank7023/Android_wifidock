<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

        <LinearLayout
    android:id="@+id/bottomBar"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_weight="1"
	android:layout_height="0dip"
	android:layout_alignParentBottom="true"	
	>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent" 
	            android:orientation="horizontal">
	        <RelativeLayout 
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            >
	            <ImageView
	       		 android:id="@+id/homebg" 
	        	 android:layout_width="match_parent"	 
	        	 android:layout_height="match_parent"   
				 android:background="@drawable/home_title_bar"
				 android:focusable="true"		
			     android:clickable="true"		
	      		  />  
	        <ImageButton				
				android:id="@+id/btnHome"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"	
				android:background="@drawable/home2"						    			
				android:scaleType="center"	
				/>
	        </RelativeLayout>
	        <TextView
	            android:id="@+id/menuTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/white"
	            android:text="@string/playing"
	            android:textSize="20.0dip"
	            android:layout_gravity="center_vertical"
	            />
	        <!-- 返回到主菜单的按钮 -->
	       <RelativeLayout 
	            android:layout_width="0dip"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            >
	         <ImageView
	       		 android:id="@+id/backbg" 
	        	 android:layout_width="match_parent"	 
	        	 android:layout_height="match_parent"   
				 android:background="@drawable/back_title_bar"
				 android:focusable="true"		
			     android:clickable="true"		
	        />  
	        <ImageButton				
				android:id="@+id/btnBack"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"							    
				android:background="@drawable/back2"					
				android:scaleType="center"	
				/>
	         </RelativeLayout>
	         </LinearLayout> 
	         </LinearLayout>
        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"  
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" >
            <TextView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"               
                android:textSize="20dp" />
            <TextView
                android:id="@+id/music_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
          </LinearLayout>
		  <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
            	android:layout_weight="1" 
                android:orientation="vertical" 
                android:layout_marginTop="5dp"                
                android:background="@drawable/music_play_progressbg">
            	<LinearLayout 
            	android:layout_width="fill_parent"
                android:layout_height="wrap_content"            
                android:orientation="horizontal" 
                android:layout_marginTop="5dp"
            	>
                <TextView
                    android:id="@+id/music_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dip"                
                    android:text="00:00" />
                <SeekBar
                    android:id="@+id/music_seekBar"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:max="100"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:layout_gravity="center_vertical"
                    android:progressDrawable="@drawable/seekbar_img"
                    android:thumb="@drawable/progresscircle"
                     />					
                <TextView
                    android:id="@+id/music_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="00:00" 
                    android:layout_marginRight="10dip" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/music_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/playlist" 
                    android:layout_gravity="right"
                    android:layout_marginRight="15dip"
                    />
            </LinearLayout>            
		<RelativeLayout 
		    android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5" 
            android:layout_below="@+id/linearLayout1"
		    >
                <RelativeLayout                    
	        	    android:layout_width="fill_parent"
	            	android:layout_height="fill_parent" 	            	
                    >
	                <ImageView 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:src="@drawable/notesmall"
		            android:layout_centerInParent="true"
	                />
		           <ListView 
		                android:id="@+id/lrcList"
		                android:layout_width="wrap_content"
		            	android:layout_height="fill_parent"		            	
		            	android:gravity="center_horizontal"
		            	android:layout_centerHorizontal="true"
		            	android:layout_centerInParent="true"
		            	android:layout_marginTop="5dp"		            	
		            	android:cacheColorHint="#00000000" 
		                />  
                </RelativeLayout>
            <!--   
            android:background="@drawable/lyricbg"
		    android:divider="@null"           
        	<LinearLayout 
        	    android:id="@+id/downLrc"
        	    android:layout_width="fill_parent"
            	android:layout_height="fill_parent"
            	android:orientation="vertical"            	
        	    >         	    
        	    <TextView 
        	        android:id="@+id/lyrInfo"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="没有歌词..."
        	        android:layout_gravity="center_horizontal"
        	        android:textColor="#99ffffff"
        	        android:textSize="20dp"  
        	        android:layout_marginTop="20dip"      	        
        	        />       	    
        	    <ImageView 
        	        android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:src="@drawable/notebig"
		            android:layout_marginTop="20dip"
        	        />
        	    <Button 
        	        android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/music_down_lrc"
		            android:layout_gravity="center_horizontal"
		            android:background="@drawable/addlrc"
		            android:layout_marginTop="20dip"		            
        	        />
        	</LinearLayout>
        	-->   
		</RelativeLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
            	android:layout_weight="0.5" 
                android:gravity="center"
                android:orientation="horizontal" 
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dp"  
                >
				
                <ImageButton                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:background="@drawable/volumn" 
                    />

                <SeekBar
                    android:id="@+id/music_volume"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:max="100"
                    android:progress="0"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:layout_gravity="center_vertical"
                    android:progressDrawable="@drawable/seekbar_img"
                    android:thumb="@drawable/progresscircle" />

                <ImageButton
                    android:id="@+id/music_random"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/allrepeat" 
                    />
            </LinearLayout>
            
        <LinearLayout
        android:id="@+id/bottomBar"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:layout_height="0dip"
		android:gravity="center"
		android:layout_alignParentBottom="true"	 >  
                <RelativeLayout
			    android:id="@+id/rlForward"
			    android:orientation="horizontal"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:background="@drawable/muscic_button" 			
				>
                <ImageButton
                    android:id="@+id/music_foward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/pre" 
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>  
                 <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:layout_alignParentRight="true"			   
				    android:src="@drawable/splitter" />             
				</RelativeLayout>
				<RelativeLayout
			    android:id="@+id/rlPlay"
			    android:orientation="horizontal"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/muscic_button"  			
				>
                <ImageButton
                    android:id="@+id/music_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/play"
                    android:layout_centerHorizontal="true" 
                    android:layout_centerVertical="true"/>  
                <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:layout_alignParentRight="true"			   
				    android:src="@drawable/splitter" />           
                </RelativeLayout>
                <RelativeLayout
			    android:id="@+id/rlNext"
			    android:orientation="horizontal"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:background="@drawable/muscic_button" 			
				>
                <ImageButton
                    android:id="@+id/music_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/next"
                    android:layout_centerHorizontal="true" 
                    android:layout_centerVertical="true"/>
                <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:layout_alignParentRight="true"			   
				    android:src="@drawable/splitter" />
                </RelativeLayout>               
            </LinearLayout>
</LinearLayout>