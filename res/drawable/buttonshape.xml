<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
	<solid android:color="#B2B2B2" /><!-- 背景的填充颜色 -->
	<gradient
        android:startColor="#CBFC9D"
        android:endColor="#A8C97B"
        android:centerColor="#9DBD6F"
        android:angle="270" 
        />
	<corners android:radius="7dp" /><!-- 边角圆弧的半径 --> 
	<stroke android:width="1.5dp" android:color="#666666"/><!-- 描边，width是边得宽度，color是颜色 -->
	<padding 
		android:left="8dp"
		android:top="5dp" 
		android:right="8dp"
		android:bottom="5dp" /><!-- 四周留出来的空白 -->
</shape>